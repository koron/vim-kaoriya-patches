+
+    static int
+guess_utf8_check(encode_state* state, char_u d)
+{
+    if (state->mode < 1)
+    {
+	if ((d & 0x80) != 0)
+	{
+	    if ((d & 0xe0) == 0xc0)
+		state->mode = 1;
+	    else if ((d & 0xf0) == 0xe0)
+		state->mode = 2;
+	    else if ((d & 0xf8) == 0xf0)
+		state->mode = 3;
+	    else if ((d & 0xfc) == 0xf8)
+		state->mode = 4;
+	    else if ((d & 0xfe) == 0xfc)
+		state->mode = 5;
+	    else
+		return 1;
+	}
+	else
+	    ++state->score;
+    }
+    else
+    {
+	if ((d & 0xc0) == 0x80)
+	{
+	    --state->mode;
+	    if (!state->mode == 0)
+		++state->score;
+	}
+	else
+	    return 1;
+    }
+    return 0;
+}
